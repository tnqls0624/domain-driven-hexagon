generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id         String    @id
  role       String
  email      String
  country    String
  postalCode String?
  street     String?
  token      String?
  provider   String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt
  removedAt  DateTime?

  @@index([provider, token])
}
